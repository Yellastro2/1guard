<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="OrangeStyle" parent="@android:style/Theme.Material.NoActionBar">
		<item name="android:statusBarColor">@color/colorPrimary</item>
		<item name="android:imageButtonStyle">@style/imageBtn</item>
		
	</style>
	
	<style name="imageBtn">
		<item name="android:tint">#ffffff</item>
	</style>
	
	<style name="OrangeBtn">
		<item name="android:background">@drawable/btn_bkg_primary</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:textSize">14sp</item>
		<item name="android:elevation">10dp</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="ActivateBtn">
		<item name="android:background">@drawable/btn_bkg_activ</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:textSize">12sp</item>
		<item name="android:padding">5dp</item>
		<item name="android:gravity">center</item>
		
		
	</style>
	
	<style name="TagText">
		<item name="android:background">@drawable/btn_bkg_tag</item>
		<item name="android:textSize">10sp</item>
		<item name="android:layout_marginRight">5dp</item>
		<item name="android:padding">2dp</item>
		<item name="android:gravity">center</item>


	</style>
	
	<style name="TextCalendSwitch">
		
		<item name="android:textColor">#ffffff</item>
		<item name="android:textSize">14sp</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_weight">1</item>
		<item name="android:gravity">center</item>
	</style>
	
	<style name="PauseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>
    </style>
	<style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

	<style name="nav_lay">
		<item name="android:layout_weight">1</item>
		<item name="android:orientation">vertical</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center</item>
	</style>
	<style name="nav_img" parent="@android:attr/buttonBarButtonStyle">
		<item name="android:layout_width">30dp</item>
		<item name="android:layout_height">40dp</item>
		<item name="android:scaleType">fitCenter</item>
		<item name="android:background">#FFFFFF</item>
		<item name="android:clickable">false</item>
	</style>
	<style name="button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
		<item name="android:layout_width">40dp</item>
		<item name="android:padding">15dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:textSize">14dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/btn_nav_selector</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>

    </style>
	
	<style name="input" parent="@android:style/Widget.EditText">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingLeft">@dimen/input_pading</item>
        <item name="android:paddingRight">@dimen/input_pading</item>
        <item name="android:paddingTop">@dimen/input_pading</item>
        <item name="android:paddingBottom">@dimen/input_pading</item>
        <item name="android:elevation">5dp</item>
        <item name="android:textSize">18dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/btn_nav_press</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
		<item name="android:layout_marginLeft">5dp</item>
		<item name="android:layout_marginRight">5dp</item>

    </style>
	<style name="text_field" >
		<item name="android:background">#FFE6D9D9</item>
		<item name="android:padding">5dp</item>
	</style>
	
</resources>
