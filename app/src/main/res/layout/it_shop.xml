<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingBottom="20dp">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/bkg_lay_dial"
		android:id="@+id/itshopRelativeLayout1"
		android:layout_margin="10dp"
		android:elevation="10dp">

		<ImageView
			android:src="@drawable/animl_1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="6dp"
			android:id="@+id/it_shopImageView1"/>

		<TextView
			android:id="@+id/it_shopTextName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Medium Text"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_below="@id/it_shopImageView1"
			android:layout_centerHorizontal="true"
			android:textStyle="bold"
			android:textColor="#FF000000"
			android:layout_margin="10dp"/>

	</RelativeLayout>

	<TextView
		android:textColor="@color/grey"
		android:id="@+id/it_shopTextOwned"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/shop_owned"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:layout_below="@id/itshopRelativeLayout1"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="6dp"/>

	<LinearLayout
		android:id="@+id/it_shopLinearPrice"
		android:orientation="horizontal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/itshopRelativeLayout1"
		android:gravity="center"
		android:layout_marginTop="0dp"
		android:layout_centerHorizontal="true">

		<TextView
			android:textColor="@color/grey"
			android:id="@+id/it_shopTextPrice"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Small Text"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_marginRight="10dp"/>

		<ImageView
			android:src="@drawable/Coin_cat"
			android:layout_width="30dp"
			android:layout_height="30dp"/>

	</LinearLayout>

</RelativeLayout>

