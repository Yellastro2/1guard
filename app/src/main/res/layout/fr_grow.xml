<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/background"
	android:layout_gravity="center">

	<RelativeLayout
		android:id="@+id/fr_growRelativTool"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp">

		<ImageButton
			android:tint="#ffffff"
			android:layout_width="45dp"
			style="?android:attr/buttonBarButtonStyle"
			android:layout_height="45dp"
			android:src="@drawable/ic_menu"
			android:layout_margin="10dp"
			android:scaleType="centerCrop"
			android:id="@+id/fr_growImageButMenu"/>

		<LinearLayout
			android:id="@+id/fr_growLinearTimeSettng"
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="@dimen/tool_height"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="20dp"
			android:background="@drawable/btn_bkg_trans"
			android:paddingLeft="5dp"
			android:paddingRight="5dp"
			android:gravity="center">

			<ImageView
				android:id="@+id/fr_growImageTimeMod"
				android:tint="#ffffff"
				android:src="@drawable/gg_sand_clock"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

			<View
				android:tint="#ffffff"
				android:background="?android:attr/dividerHorizontal"
				android:layout_width="1dp"
				android:layout_height="match_parent"/>

			<ImageView
				android:tint="#ffffff"
				android:src="@drawable/solid_fire2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/fr_growImageFire"/>

		</LinearLayout>

		<LinearLayout
			android:paddingHorizontal="5dp"
			android:layout_height="@dimen/tool_height"
			android:layout_width="wrap_content"
			android:id="@+id/fr_growImageVieReward"
			android:background="@drawable/btn_bkg_trans"
			android:layout_centerHorizontal="true"
			android:layout_below="@id/fr_growLinearTimeSettng"
			android:layout_marginTop="10dp"
			android:gravity="center">

			<TextView
				android:textColor="#ffffff"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="+30"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:id="@+id/fr_growTextRevardNum"
				android:textStyle="bold"/>

			<ImageView
				android:src="@drawable/Coin_cat"
				android:layout_width="20dp"
				android:layout_height="wrap_content"
				android:layout_margin="5dp"/>

			<ImageView
				android:src="@drawable/ads_revard"
				android:layout_width="wrap_content"
				android:layout_height="40dp"/>

		</LinearLayout>

		<TextView
			android:layout_marginLeft="20dp"
			android:textSize="12sp"
			android:id="@+id/fr_growTextCoins"
			android:layout_width="100dp"
			android:layout_height="@dimen/tool_height"
			android:text="25"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:background="@drawable/btn_bkg_trans"
			android:gravity="right|center"
			android:layout_toRightOf="@id/fr_growLinearTimeSettng"
			android:paddingRight="20dp"
			android:layout_alignTop="@id/fr_growLinearTimeSettng"/>

		<ImageView
			android:layout_alignLeft="@id/fr_growTextCoins"
			android:src="@drawable/Coin_cat"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:id="@+id/frgrowImageView3"
			android:layout_marginTop="15dp"/>

		<LinearLayout
			android:padding="3dp"
			android:layout_height="@dimen/tool_height"
			android:orientation="vertical"
			android:layout_width="50dp"
			android:background="@drawable/btn_bkg_trans"
			android:layout_toLeftOf="@id/fr_growLinearTimeSettng"
			android:layout_marginRight="20dp"
			android:gravity="center"
			android:layout_alignTop="@id/fr_growLinearTimeSettng">

			<ImageView
				android:id="@+id/fr_growImageLang"
				android:src="@drawable/rus"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:scaleType="centerInside"/>

		</LinearLayout>

	</RelativeLayout>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/grow_body"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="20dp"
		android:id="@+id/frgrowTextView1"
		android:textColor="#FFFFFFFF"
		android:layout_below="@id/fr_growRelativTool"/>

	<Button
		android:layout_width="200dp"
		android:layout_height="wrap_content"
		android:text="@string/grow_btn"
		android:layout_alignParentBottom="true"
		style="@style/OrangeBtn"
		android:padding="3dp"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="30dp"
		android:layout_marginLeft="80dp"
		android:id="@+id/fr_growButtonStart"/>

	<ImageView
		android:src="@drawable/Animal"
		android:layout_width="220dp"
		android:layout_height="220dp"
		android:layout_marginTop="30dp"
		android:layout_centerHorizontal="true"
		android:layout_below="@id/frgrowTextView1"
		android:id="@+id/fr_growImageMain"/>

	<TextView
		android:paddingVertical="3dp"
		android:paddingHorizontal="10dp"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:layout_width="wrap_content"
		android:layout_height="30dp"
		android:text="Учеба"
		android:gravity="center"
		android:layout_below="@id/fr_growImageMain"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="30dp"
		android:background="@drawable/btn_bkg_tag"
		android:textColor="@color/background"
		android:id="@+id/fr_growButtonTag"/>

	<TextView
		android:textStyle="bold"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="10:00"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_below="@id/fr_growButtonTag"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="40dp"
		android:textSize="55sp"
		android:id="@+id/fr_growTextTime"/>

	<SeekBar
		android:id="@+id/fr_growSeekBar"
		android:elevation="5dp"
		android:max="22"
		android:progressDrawable="@drawable/seekbar_styled"
		android:thumb="@drawable/custom_thumb"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/fr_growTextTime"/>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true">

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Промотать"
			android:background="#FF95DC87"
			android:id="@+id/fr_growButtonTestFinish"/>

	</LinearLayout>

</RelativeLayout>

