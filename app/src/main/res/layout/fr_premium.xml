<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#EEEEEE">

	<RelativeLayout
		android:background="@color/background"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:id="@+id/frpremRelativeLayout1">

		<ImageButton
			android:layout_width="wrap_content"
			style="?android:attr/buttonBarButtonStyle"
			android:layout_height="wrap_content"
			android:src="@drawable/aic_arrow_left"
			android:layout_centerVertical="true"
			android:id="@+id/fr_premImageButBack"/>

		<TextView
			android:textColor="#ffffff"
			android:textStyle="bold"
			android:textSize="14sp"
			android:layout_width="wrap_content"
			android:layout_height="20dp"
			android:text="Продвинутая версия"
			android:layout_centerInParent="true"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Восстановить"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"/>

	</RelativeLayout>

	<TextView
		android:textColor="@color/background"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="У вас уже есть Pro версия?"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:layout_margin="15dp"
		android:id="@+id/frpremiumTextView1"/>

	<ImageView
		android:src="@drawable/prem_btn"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@id/frpremiumTextView1"
		android:id="@+id/fr_premiumImagBuy"
		android:layout_marginTop="15dp"/>

	<RelativeLayout
		android:layout_below="@id/frpremRelativeLayout1"
		android:background="#ffffff"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_above="@id/fr_premiumImagBuy">

		<androidx.viewpager.widget.ViewPager
			android:id="@+id/fr_premiumViewPager"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>

		<TextView
			android:textColor="@color/grey"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Small Text"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true"
			android:layout_margin="15dp"
			android:id="@+id/fr_premiumTextCounter"/>

		<LinearLayout
			android:gravity="center"
			android:id="@+id/fr_premiumLinearCounter"
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_above="@id/fr_premiumTextCounter"
			android:layout_centerHorizontal="true"/>

	</RelativeLayout>

</RelativeLayout>

