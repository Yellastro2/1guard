<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/background">

	<LinearLayout
		android:id="@+id/act_homeLinearLayout"
		android:background="@color/colorPrimary"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:layout_alignParentBottom="true"
		android:gravity="center">

		<ImageButton
			android:visibility="gone"
			android:id="@+id/act_homeHist"
			android:layout_weight="1"
			android:layout_width="40dp"
			style="?android:attr/buttonBarButtonStyle"
			android:layout_height="40dp"
			android:src="@drawable/ic_history"/>

		<ImageButton
			android:id="@+id/act_homeList"
			android:layout_weight="1"
			android:layout_width="40dp"
			style="?android:attr/buttonBarButtonStyle"
			android:layout_height="40dp"
			android:src="@drawable/ic_view_list"/>

		<ImageButton
			android:id="@+id/act_homeAction"
			android:layout_weight="1"
			android:layout_width="40dp"
			style="?android:attr/buttonBarButtonStyle"
			android:layout_height="40dp"
			android:src="@drawable/ic_play_outline"/>

		<ImageButton
			android:id="@+id/act_homeProfile"
			android:layout_weight="1"
			android:layout_width="40dp"
			style="?android:attr/buttonBarButtonStyle"
			android:layout_height="40dp"
			android:src="@drawable/ic_card_account_mail_outline"/>

		<ImageButton
			android:visibility="gone"
			android:id="@+id/act_homeMap"
			android:layout_weight="1"
			android:layout_width="40dp"
			style="?android:attr/buttonBarButtonStyle"
			android:layout_height="40dp"
			android:src="@drawable/ic_network_strength_3"/>

	</LinearLayout>

	<LinearLayout
		android:layout_above="@id/act_homeLinearLayout"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:visibility="gone"
			android:id="@+id/activity_mainProgLay"
			android:layout_width="match_parent"
			android:background="@color/colorPrimary"
			android:layout_height="3dp">

			<View
				android:id="@+id/activity_mainProgView"
				android:layout_width="match_parent"
				android:background="@drawable/bkg_prog"
				android:layout_height="wrap_content"/>

		</LinearLayout>

		<FrameLayout
			android:id="@+id/activity_mainFrameLayout"
			android:layout_width="match_parent"
			android:layout_height="match_parent"/>

	</LinearLayout>

	<ImageButton
		android:id="@+id/activity_mainImageButton"
		android:layout_width="wrap_content"
		style="?android:attr/buttonBarButtonStyle"
		android:layout_height="wrap_content"
		android:src="@android:drawable/ic_menu_close_clear_cancel"
		android:layout_alignParentRight="true"
		android:layout_margin="10dp"/>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="log"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:id="@+id/activitymainTextLog"
		android:textColor="#FF7FDA2F"/>
	

</RelativeLayout>

